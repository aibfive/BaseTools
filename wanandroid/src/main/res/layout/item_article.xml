<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2020-12-12"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color666666"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_13"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_tag"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_date"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/color666666"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        tools:text="标题"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color333333"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintTop_toBottomOf="@id/tv_tag"
        app:layout_constraintLeft_toLeftOf="@id/tv_date"
        app:layout_constraintRight_toLeftOf="@id/tv_collect"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/collect_gray"
        android:padding="@dimen/dp_13"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="作者：某某"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color3489FF"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="@id/tv_date"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>



</androidx.constraintlayout.widget.ConstraintLayout>