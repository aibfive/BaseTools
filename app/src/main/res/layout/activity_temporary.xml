<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.temporary.TemporaryActivity">
    
    <com.aibfive.basetools.widget.GetCodeView
        android:id="@+id/getCodeView"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="@color/color333333"
        android:textSize="14sp"
        android:gravity="center"
        app:init_desc="获取验证码了"
        app:countdown_desc="正在倒计时(%d)"
        app:millis_in_future="40000"
        android:background="@color/color3493FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStart"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Start"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color333333"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/color3493FF"
        app:layout_constraintTop_toBottomOf="@id/getCodeView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCancel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Cancel"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color333333"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/color3493FF"
        app:layout_constraintTop_toBottomOf="@id/tvStart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>